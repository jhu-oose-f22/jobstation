<%- include('includes/header') %>




<div class="container py-md-5 container--narrow">
  
    <div class="profile-nav nav nav-tabs pt-2 mb-4">
      <a href="#" class="profile-nav-link nav-item nav-link active">Search result:</a>
    </div>
  
    <div class="list-group">
      <% books.forEach(function(post) { %>
        <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
          <img class="avatar-tiny" src="<%= post.owner.avatar %>">
          <strong><%= post.title %></strong> related topic: <strong><%= post.author %></strong>,  added on <%= post.addedDate.getMonth() + 1 %>/<%= post.addedDate.getDate() %>/<%= post.addedDate.getFullYear() %>
        </a>
      <% }) %>
      
      
    </div>
  </div>
  <%- include('includes/footer') %>
