<%- include('includes/header')%>
  <div class="container py-md-5 container--narrow">

    <%- include('includes/flash') %>

    <a class="small font-weight-bold" href="/book/<%= book._id %>">&laquo; Back to book permalink</a>

    <form class="mt-3" action="/book/<%= book._id %>/edit" method="POST">
      <div class="form-group">
        <label for="book-title" class="text-muted mb-1"><small>Title</small></label>
        <input required name="title" value="<%= book.title %>" id="book-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off">
      </div>
      <div class="form-group">
        <label for="book-author" class="text-muted mb-1"><small>Author</small></label>
        <input required name="author" value="<%= book.author %>" id="book-author" class="form-control form-control-lg" type="text" placeholder="" autocomplete="off">
      </div>

      <div class="form-group">
        <label for="book-body" class="text-muted mb-1"><small>Body Content</small></label>
        <textarea required name="body" id="book-body" class="body-content tall-textarea form-control" type="text"><%= book.body %></textarea>
      </div>
      
      <button class="btn btn-primary">Save updates</button>
    </form>
  </div>
  
<%- include('includes/footer') %>
